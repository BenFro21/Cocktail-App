<h1>Update Cocktail Page</h1>

<form action="/cocktails/<%= cocktail._id %>?_method=PUT" method="POST">
        <input type="text" name="title" placeholder="title" value="<%= cocktail.title %>">
        <input type="text" name="ingredients" placeholder="ingredients" value="<%= cocktail.ingredients %>" >
        <input type="text" name="crafting" placeholder="crafting" value="<%= cocktail.crafting %>">
        <input type="text" name="img" placeholder="img" value="<%= cocktail.img  %>">
        <button type="submit" name="submit" value="submit">Submit</button>

</form>